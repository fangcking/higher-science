<!--Components/setGoods/setGoods.wxml-->
<view>
<slot></slot>
<form bindsubmit="Setting" bindreset="formReset" hidden="{{hidden}}">
<view wx:if ="{{needSetMore}}" class ="main-input">
<picker name='maininput' bindchange='select'  range ="{{localdata.datavalue}}"range-key='name' value='{{settingindex}}'>
{{localdata.datavalue[settingindex].name}}
</picker>
</view>
<view wx:if ="{{needAddMore}}">
<input name ="addmaininput" placeholder='设置新模式' class ="main-input"></input>
</view>
<picker-view indicator-style="height:50px"  style ="width:100%;height:200px;" value ="{{pvindex}}" bindchange ="a"> 
<picker-view-column>
<view wx:for="{{settingMoreMsg}}" style='line-height:50px'>
{{item.name}}
</view>
</picker-view-column>
<picker-view-column>
<view wx:for="{{selectvalue}}" style='line-height:50px'>
{{item}}
</view>
</picker-view-column>
</picker-view>
