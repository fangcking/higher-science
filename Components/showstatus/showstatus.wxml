<!--Components/homestatus/homestatus.wxml-->
<view class='homestatus'>
<text class='title'>{{title}}</text>
<ul  class ="{{howshow =='oneline' ?'status-items':'status-itemscol'}}">
<li wx:for="{{statusItems}}"
class =" {{howshow ==='oneline' ?'status-item':'status-itemcol'}}                       {{current_item ===index +1 && selected?'statusitemtap':''}}"
bindtap="sethomestatus" bindlongpress ="delete" data-key='{{index}}'>
<image src="{{item.bgimage}}" wx:if ="{{howshow ==='moreline'}}" class='bgimage'></image>
{{item.name}}
</li>
<li  class=" status-item status-slot" bindtap ='addstatusslot' wx:if ="{{howshow =='oneline' ?true:false}}">
<slot></slot>
</li>
</ul>
<view class='setAll'>
<set id ="setting" setDataName = "{{storgename}}"
 placeholder ='设置情景状态例如：休闲'
 getDataName ="{{storgename}}"
 oriData ="{{oriData}}"
 hidden ="{{needhide}}"
 needSetMore ="{{needSetMore}}"
 bindgetdataback ="setstatus">
</set>
</view>
</view>
