.status-slot{
  width: auto;
  background: rgb(247, 247, 162);
  color:red
}

/* 多行多列 */


.status-itemscol{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align:center;
}
.status-itemcol{
  flex:0 1 auto;
  width:25%;
  margin:30rpx;
  height:200rpx;
  line-height: 100rpx; 
  border-radius: 40rpx;
  background: rgb(230, 239, 250);
  box-shadow: 5px 5px 5px rgb(46, 8, 116); 
}
.bgimage{
  display: block;
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
  padding-top: 20rpx;
}
