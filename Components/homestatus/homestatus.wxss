/* Components/homestatus/homestatus.wxss */
.homestatus{
  width: 100%;
 }
 .title{
  font-weight: bold;
  color: rgb(76, 77, 78)
 }
.status-items{
  width: 100%;
  height: 80px;
  display: flex;
  flex-direction: row;
  overflow: auto;
  background: rgb(233, 95, 95);
  text-align:center;
}
.status-item{
  flex: 1 0 auto;
  width: 50px;
  margin: 10px;
  padding: 5px;
  height: 50px;
  line-height: 50px;
  background: rgb(230, 239, 250);
  box-shadow: 5px 5px 5px rgb(46, 8, 116); 
}
.statusitemtap{
  color: red;
  background: rgb(190, 184, 247);
  box-shadow: 7px 7px 7px rgb(201, 29, 29);
  /* animation: boxshadow 0.1s; */
}
